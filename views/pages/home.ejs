

    <!-- Portfolio Grid Section -->
    <section id="portfolio" class="bg-light-gray">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">ГЕРОЇ ТИЖНЯ</h2>
                    <h3 class="section-subheading text-muted">Народжені порушувати правила.</h3>
                </div>
            </div>
            <div class="row" id="issuesBlock"></div>
        </div>
    </section>
    
    <!-- Contact Section -->
    <section id="issue" class="issue">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">ОПИШИ ПОРУШЕННЯ</h2>
                    <h3 class="section-subheading text-muted"></h3>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <form name="sentMessage" class="issue-form" novalidate>
                        <div class="row">
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <input type="text" class="form-control validate" placeholder="Your Name *" name="userName" required 
                                            data-validation-message="Введіть Ваше ім’я.">
                                        <p class="help-block text-danger"></p>
                                    </div>
                                    <div class="form-group">
                                        <input type="email" class="form-control validate" placeholder="Your Email *" name="userEmail" required
                                            data-validation-message="Введіть email">
                                        <p class="help-block text-danger"></p>
                                    </div>
                                    <div class="form-group">
                                        <input type="text" class="form-control validate" placeholder="Номер авто *" name="licensePlateNumber" required 
                                            data-validation-message="Please enter license plate of mudak.">
                                        <p class="help-block text-danger"></p>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <div class="input-group">
                                            <input type="text" class="form-control date datetimepicker validate" placeholder="Дата фотографування *" name="photographingDate" required/>
                                            <span class="input-group-addon">
                                                <span class="glyphicon glyphicon-calendar"></span>
                                            </span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <select name="violationType" class="selectpicker" style="width: 100%">
                                          <option value="" selected></option>
                                          <option value="a">Паркування другим рядом</option>
                                          <option value="b">Паркування під знаком "зупинка заборонена"</option>
                                          <option value="c">Паркування на тротуарі</option>
                                          <option value="d">Паркування на пішохідному переході</option>
                                          <option value="e">Паркування на місці для інвалідів</option>
                                          <option value="f">Паркування на газоні</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <input type="hidden" name="lng"/>
                                        <input type="hidden" name="lat"/>
                                        <select class="validate" name="address" style="width: 100%" required>
                                          <option value="" selected="selected"></option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <input type="hidden" name="photoFileName" class="validate"/>
                                        <span class="btn btn-xl btn-file upload-photo-button">
                                            <span class="upload-button-text">ДОДАТИ ФОТО</span>
                                            <img class="photo-preview hidden" src=""/>
                                            <form>
                                                <input type="file" class="upload-photo-input"/>
                                                <input type="submit" style="display:none" class="upload-photo-input"/>
                                            </form>
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-8">
                                    <div class="form-group">
                                        <textarea class="form-control" placeholder="Додайте коментар *" name="description" required data-validation-message="Додайте коментар."></textarea>
                                        <p class="help-block text-danger"></p>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="text-center">
                                        <div id="success"></div>
                                        <button type="submit" class="btn btn-xl">ВИЗНАТИ ГЕРОЯ</button>
                                    </div>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
    <div class="clearfix"></div>
    <section class="map">
        <div id="map"></div>
    </section>

    
